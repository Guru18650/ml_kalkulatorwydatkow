<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ml_kalkulatorwydatkow.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Strona główna">

    <StackLayout>
        <Label Text="Finanse" FontSize="40" HorizontalOptions="Center" Margin="10"></Label>
            <Button Text="Lista" Margin="20,10,20,0" x:Name="Lista" Clicked="Lista_Clicked"></Button>
            <Button Text="Dodaj" Margin="20,10,20,0" x:Name="Dodaj" Clicked="Dodaj_Clicked"></Button>
            <Button Text="Statystyki" Margin="20,10,20,0" x:Name="Staty" Clicked="Staty_Clicked"></Button>
            <Button Text="Ustawienia" Margin="20,10,20,0" x:Name="Ustawienia" Clicked="Ustawienia_Clicked"></Button>
    </StackLayout>

</ContentPage>
